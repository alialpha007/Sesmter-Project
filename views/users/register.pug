extends ../layout 

block content 
    form(action="/register", method="post")
            h1.text-center Register
            div.form-group
            label(for="title") Name
            input(type="text" name="name" class="form-control" id="name" placeholder="Name")
            label(for="title") Email
            input(type="text" name="email" class="form-control mt-3" id="email" placeholder="Enter your Email")
            div.form-group.mt-3
            label(for="text") Password
            input(name="password" class="form-control" id="password" placeholder="Password")
            button(type="submit" class="btn btn-primary pt-2 mt-3 mr-1") Register